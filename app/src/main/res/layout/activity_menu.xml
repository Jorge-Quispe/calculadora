<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menu">

  <TextView
      android:id="@+id/textView"
      android:layout_width="139dp"
      android:layout_height="30dp"
      android:text="PRINCIPAL"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.551"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.101" />

  <Button
      android:id="@+id/btnsumar"
      android:layout_width="116dp"
      android:layout_height="92dp"
      android:text="Sumar 2 numeros"
      android:onClick="suma"
      android:backgroundTint="@color/verde"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.186"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.228" />

  <Button
      android:id="@+id/btnraiz"
      android:layout_width="151dp"
      android:layout_height="92dp"
      android:text="Raiz cuadrada"
      android:onClick="raiz"
      android:backgroundTint="@color/naranja"

      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.703"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.228" />

  <Button
      android:id="@+id/btnparimpar"
      android:layout_width="129dp"
      android:layout_height="92dp"
      android:text="Par Impar"
      android:onClick="parimpar"
      android:backgroundTint="@color/rosa"

      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toStartOf="@+id/btnvacios"
      app:layout_constraintHorizontal_bias="0.6"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <Button
      android:id="@+id/btnvacios"
      android:layout_width="135dp"
      android:layout_height="92dp"
      android:text="Espacios vacios"
      android:onClick="espacio"
      android:backgroundTint="@color/celeste"

      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.721"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>